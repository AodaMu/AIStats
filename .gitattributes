# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf

# Data files (mark as binary to prevent Git from trying to diff them)
*.csv binary
*.xlsx binary
*.xls binary
*.parquet binary
*.sav binary
*.dta binary

# Jupyter notebooks (treat as text for better collaboration)
*.ipynb text eol=lf

# JSON, YAML
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Batch scripts (Windows)
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf

